package ms_pacientes.services;

import java.time.Year;
import java.util.List;
import java.util.NoSuchElementException;
import java.util.Random;

import org.springframework.stereotype.Service;

import com.example.demo.dto.PacienteRequest;
import com.example.demo.dto.PacienteResponse;
import com.example.demo.enums.EstadoRegistro;

import jakarta.transaction.Transactional;
import lombok.AllArgsConstructor;
import ms_pacientes.mappers.PacienteMapper;
import ms_pacientes.pacientes.entities.Paciente;

@Service
@Transactional
@AllArgsConstructor
public class PacienteServiceImpl implements PacienteService {
	private final ms_pacientes.repositories.PacienteRepository pacienteRepository;
	private final PacienteMapper pacienteMapper;
	
	

	@Override
	public List<PacienteResponse> listar() {
		// TODO Auto-generated method stub
		return pacienteRepository.findAll().stream().map(pacienteMapper::entityToResponse).toList();
	}

	@Override
	public PacienteResponse obtenerPorId(Long id) {
		// TODO Auto-generated method stub
		return pacienteMapper.entityToResponse(getPacienteOrThrow(id));
	}

	@Override
	public PacienteResponse registrar(PacienteRequest request) {
		
		existsByEmail(request.email());
		existsByTelefono(request.telefono());
		
		String expediente = generarNumeroExpediente(request.apellidoPaterno(), request.apellidoPaterno());
		
		
		
		
		
		Paciente pacienteToSave = pacienteMapper.requestToEntity(request, imc, expediente);
		return pacienteMapper.entityToResponse(pacienteRepository.save(pacienteToSave));
	}

	@Override
	public PacienteResponse actualizar(PacienteRequest request, Long id) {
		Paciente pacienteToUpdate = getPacienteOrThrow(id);
		Paciente pacienteUpdated = pacienteMapper.updateEntityFromRequest(request, pacienteToUpdate);
		return pacienteMapper.entityToResponse(pacienteUpdated);
	}

	
	@Override
	public void eliminar(Long id) {
		Paciente paciente = getPacienteOrThrow(id);
		
		paciente.setEstadoRegistro(EstadoRegistro.ELIMINADO);
		
		pacienteRepository.save(paciente);
		//pacienteRepository.delete(getPacienteOrThrow(id));
		
	}
	
	
	private Paciente getPacienteOrThrow(Long id) {
		
		return pacienteRepository.findByIdAndEstadoRegistro(id, EstadoRegistro.ACTIVO).orElseThrow(()-> 
			new NoSuchElementException("No se encontró un paciente con el ID: "+ id));
	}
	
	private void existsByEmail(String email) {
		if(pacienteRepository.existsByEmailIgnoreCaseAndEstadoRegistro(email, EstadoRegistro.ACTIVO)) {
			throw new IllegalArgumentException("Ya existe un paciente registrado con este email" + email);
		}
	}
	
	private void existsByTelefono(String telefono) {
		if(pacienteRepository.existsByTelefonoAndEstadoRegistro(telefono, EstadoRegistro.ACTIVO)) {
			throw new IllegalArgumentException("Ya existe un paciente registrado con este telefono" + telefono);
		}
	}
	
	private Double calcularImc(Double peso, Double estatura) {
		return peso / (estatura * estatura);
	}

	@Override
	public PacienteResponse obtenerPacientePorIdSinEstado(Long id) {
		// TODO Auto-generated method stub
		return  pacienteMapper.entityToResponse(pacienteRepository.findById(id).orElseThrow(()-> 
				new NoSuchElementException("Paciente no encontrado con el id: "+ id)));
	}
	
	private boolean validarEmailCambio(Paciente paciente, PacienteRequest request) {
		if(!paciente.getEmail().equalsIgnoreCase(request.email())) {
			existsByEmail(request.email());
			return true;
		}
		return false;
	}
	
	private boolean validarTelefonoCambio(Paciente paciente, PacienteRequest request) {
		if(!paciente.getTelefono().equalsIgnoreCase(request.telefono())) {
			existsByTelefono(request.telefono());
			return true;
		} 
		return false;
	}
	
	private Double calcularImcCambio(Paciente paciente, PacienteRequest request) {
		if(!paciente.getPeso().equals(request.peso()) || paciente.getEstatura().equals(request.estatura())) {
			return calcularImc(request.peso(), request.estatura());
		}
		return paciente.getImc();
	}
	
	public static String generarNumeroExpediente(
            String nombre,
            String apellidoPaterno
    ) {
        // Normalizar texto (mayúsculas y sin espacios)
        String nom = nombre.trim().toUpperCase(Locale.ROOT);
        String ape = apellidoPaterno.trim().toUpperCase(Locale.ROOT);

        // Tomar las primeras 3 letras (o completar con X si es corto)
        String nomPart = completar(nom, 3);
        String apePart = completar(ape, 3);

        // Año actual
        int anio = Year.now().getValue();

        // Número aleatorio de 4 dígitos
        int random = new Random().nextInt(9000) + 1000;

        return String.format("EXP-%s-%s-%d-%d", apePart, nomPart, anio, random);
    }

    private static String completar(String texto, int longitud) {
        if (texto.length() >= longitud) {
            return texto.substring(0, longitud);
        }
        return String.format("%-" + longitud + "s", texto).replace(' ', 'X');
    }
	
	

}
