package com.osiel.citas.services;

import java.util.List;
import java.util.NoSuchElementException;

import org.springframework.stereotype.Service;

import com.example.demo.clients.MedicoClient;
import com.example.demo.clients.PacienteClient;
import com.example.demo.dto.EstadoCita;
import com.example.demo.dto.MedicoResponse;
import com.example.demo.dto.PacienteResponse;
import com.example.demo.enums.EstadoRegistro;
import com.osiel.citas.dtos.CitaRequest;
import com.osiel.citas.dtos.CitaResponse;
import com.osiel.citas.entities.Cita;
import com.osiel.citas.mappers.CitaMapper;
import com.osiel.citas.repositories.CitaRepository;

import jakarta.transaction.Transactional;
import lombok.AllArgsConstructor;
import lombok.extern.slf4j.Slf4j;

@Service
@AllArgsConstructor
@Slf4j
@Transactional
public class CitaServiceImpl implements CitaService {
	private final CitaMapper citaMapper;
	private final CitaRepository citaRepository;
	private final PacienteClient pacienteClient;
	private final MedicoClient medicoClient;
	
	@Override
	public List<CitaResponse> listar() {
		return citaRepository.findByEstadoRegistro(EstadoRegistro.ACTIVO).stream().map(
				cita -> citaMapper.entityToResponse(
						cita, 
						getPacienteResponseSinEstado(cita.getIdPaciente()),
						getMedicoResponse(cita.getIdMedico())
						))
										.toList();
	
	}

	@Override
	public CitaResponse obtenerPorId(Long id) {
		Cita cita = getCitaOrThrow(id);
		
		
		return citaMapper.entityToResponse(
				cita, 
				getPacienteResponseSinEstado(cita.getIdPaciente()), 
				getMedicoResponse(cita.getIdMedico())
				
				);
		
	}

	@Override
	public CitaResponse registrar(CitaRequest request) {
		log.info("registrando cita {}", request );
		
		PacienteResponse pacienteResponse = getPacienteResponse(request.idPaciente());
		
		MedicoResponse medicoResponse = getMedicoResponse(request.idMedico());
		
		
		
		
		Cita cita = citaRepository.save(citaMapper.requestToEntity(request));
		
		log.info("Cita registrada");
		return citaMapper.entityToResponse(cita, pacienteResponse, medicoResponse);
		
		
	}

	@Override
	public CitaResponse actualizar(CitaRequest request, Long id) {
		Cita cita = getCitaOrThrow(id);
		
		PacienteResponse pacienteResponse = getPacienteResponse(request.idPaciente());
		MedicoResponse medicoResponse = getMedicoResponse(request.idMedico());
		
		log.info("Actualizando cita {}", cita);
		
		EstadoCita estadoCita = EstadoCita.fromCodigo(request.idEstadoCita());
		
		Cita citaActualizada = citaMapper.updateEntityFromRequest(request, cita, estadoCita);
		
		log.info("Guardando cita actualizada");
		
		return citaMapper.entityToResponse(citaActualizada, pacienteResponse, medicoResponse);
			
		
	}

	@Override
	public void eliminar(Long id) {
		log.info("Buscando cita a eliminar");
		Cita citaACancelar = getCitaOrThrow(id);
		
		log.info("Actualizando estado de cita a Eliminado");
		citaACancelar.setEstadoCita(EstadoCita.CANCELADA);
		
		citaRepository.save(citaACancelar);
		
	}
	
	private Cita getCitaOrThrow(Long id) {
		return citaRepository.findByIdAndEstadoRegistro(id, EstadoRegistro.ACTIVO).orElseThrow(()-> new NoSuchElementException("No se encontr√≥ la cita con el id: "+ id));
	}
	
	private PacienteResponse getPacienteResponse(Long id) {
		return pacienteClient.obtenerPacientePorId(id);
	}
	
	private PacienteResponse getPacienteResponseSinEstado(Long id) {
		return pacienteClient.obtenerPacienteSinEstado(id);
	}
	
	private MedicoResponse getMedicoResponse(Long id) {
		return medicoClient.obtenerMedicoPorId(id);
	}

}
