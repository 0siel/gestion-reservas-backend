# Usa el formato ${VARIABLE:valor_por_defecto}
spring.datasource.url=${DB_URL:jdbc:oracle:thin:@localhost:1521:FREE}
spring.datasource.username=${DB_AUTH_USER:SEGURIDAD_USER}
spring.datasource.password=${DB_AUTH_PASS:SeguridadPass123}
spring.datasource.driver-class-name=oracle.jdbc.OracleDriver

# Fuerza el dialecto para que Hibernate no tenga que "adivinarlo"
spring.jpa.database-platform=org.hibernate.dialect.OracleDialect

# JPA Config
spring.jpa.hibernate.ddl-auto=update
spring.jpa.properties.hibernate.default_schema=SEGURIDAD_USER