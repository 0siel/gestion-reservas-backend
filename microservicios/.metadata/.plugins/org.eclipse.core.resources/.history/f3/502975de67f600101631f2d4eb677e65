spring.application.name=msv-medicos

server.port=8081

# Configuración de Conexión
spring.datasource.url=jdbc:oracle:thin:@localhost:1521:XE
spring.datasource.username=PROYECTO_MEDICOS
spring.datasource.password=tu_password
spring.datasource.driver-class-name=oracle.jdbc.OracleDriver

# Estrategia de JPA: "validate" solo revisa que la tabla en DB coincida con la Entidad Java
spring.jpa.hibernate.ddl-auto=validate
spring.jpa.show-sql=true

eureka.client.service-url.dafaultZone=http://localhost:8761/eureka
eureka.instance.instance-id=${spring.application.name}:${random.value}
