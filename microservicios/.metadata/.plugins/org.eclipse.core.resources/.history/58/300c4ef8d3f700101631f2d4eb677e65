package com.osiel.citas.repositories;



import java.util.List;
import java.util.Optional;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.stereotype.Repository;

import com.example.demo.enums.EstadoRegistro;
import com.osiel.citas.entities.Cita;

@Repository
public interface CitaRepository extends JpaRepository<Cita, Long>{
	List<Cita> findByEstadoRegistro(EstadoRegistro estadoRegistro);
	
	Optional<Cita> findByIdAndEstadoRegistro(Long id, EstadoRegistro estadoRegistro);
	
	List<Cita> findByIdPaciente(Long idPaciente);
	
	List<Cita> findByIdMedico(Long idMedico);

} 
