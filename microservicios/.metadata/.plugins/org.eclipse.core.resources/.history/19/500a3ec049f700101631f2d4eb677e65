package com.example.demo.dto;


import com.example.demo.enums.EstadoRegistro;


import jakarta.validation.constraints.DecimalMax;
import jakarta.validation.constraints.DecimalMin;
import jakarta.validation.constraints.Email;
import jakarta.validation.constraints.Max;
import jakarta.validation.constraints.Min;
import jakarta.validation.constraints.NotBlank;
import jakarta.validation.constraints.NotNull;
import jakarta.validation.constraints.Pattern;
import jakarta.validation.constraints.Size;

public record PacienteRequest(
		@NotBlank(message = "El nombre es requerido")
		@Size(max = 50, message = "El nombre debe tener menos de 50 caracteres")
		String nombre,
		
		@NotBlank(message = "El apellido paterno es requerido")
		@Size(max = 50, message = "El apellido paterno debe tener menos de 50 caracteres")
		String apellidoPaterno,
		
		@NotBlank(message = "El apellido materno es requerido")
		@Size(max = 50, message = "El apellido materno debe tener menos de 50 caracteres")
		String apellidoMaterno,
		
		@NotNull(message = "La edad es requerida")
		@Min(value = 0, message = "La edad debe ser mayor a 0")
		@Max(value = 100, message = "La edad debe ser menor a 100 años")
		Short edad,
		
		@NotNull(message = "El peso es requerido")
		@DecimalMin(value = "1.0", message = "El peso debe ser mayor a 1kg")
		@DecimalMax(value = "250.0", message = "El peso debe ser menor a 250kg")
		Double peso,
		
		@NotNull(message = "El IMC es requerido")
		@DecimalMin(value = "10.0", message = "El IMC debe ser mayor a 10.0")
		@DecimalMax(value = "50.0", message = "El iIMC debe ser menor a 50.0")
		Double imc,
		
		@NotNull(message = "La estatura es requerida")
		@DecimalMin(value = "0.4", message = "La esta")
		@DecimalMax(value = "250.0", message = "El peso debe ser menor a 250kg")
		Double estatura,
		
		
		@NotBlank(message = "El email es necesario")
		@Size(max = 100, message = "EL email debe tener menos de 100 caracteres")
		@Email(message = "El email debe tener un formato valido: email@example.com")
		String email,
		
		
		@NotBlank(message = "El número de expediente es requerido")
		@Size(max = 20, message = "El expediente debe tener menos de 20 caracteres")
		String numeroExpediente,
		
		
		@NotBlank(message = "EL número de teléfono es requerido")
		@Size(min = 10, max = 10, message = "EL número de tlefono debe de tener exactamente 10 caracteres")
		@Pattern(regexp = "^[0-9]{10}$", message = "El número de telefono debe contener 10 digitos numéricos")
		String telefono,
		
		
		@NotBlank(message = "La dirección es requerida")
		@Size(max = 150, message = "La dirección debe tener menos de 150 caracteres")
		String direccion, 
		

		Long estadoRegistro
		) {

}
